<Window
    x:Class="MinecraftLocalizer.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:MinecraftLocalizer.Behaviors"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:properties="clr-namespace:MinecraftLocalizer.Properties"
    xmlns:viewModels="clr-namespace:MinecraftLocalizer.ViewModels"
    Title="О программе"
    Width="400"
    Background="#111820"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    Style="{StaticResource WindowStyle}">

    <Window.DataContext>
        <viewModels:AboutViewModel />
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="/Styles/SystemButtonsStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="#111820" CornerRadius="10">
        <Grid Margin="15,10">

            <i:Interaction.Behaviors>
                <behaviors:DragWindowBehavior />
            </i:Interaction.Behaviors>

            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <TextBlock
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Minecraft Localizer" />

                <TextBlock
                    Margin="0,5,0,10"
                    FontSize="14"
                    Foreground="LightGray"
                    Text="{Binding Source={x:Static properties:Resources.Version}, StringFormat={}{0} 1.1.0}" />

                <TextBlock
                    Foreground="White"
                    Text="{x:Static properties:Resources.ProgramDescription}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <Grid Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="4" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right">
                        <Hyperlink
                            Command="{Binding OpenGitHubCommand}"
                            Cursor="Hand"
                            Foreground="LightBlue">
                            GitHub
                        </Hyperlink>
                    </TextBlock>

                    <TextBlock
                        Grid.Column="1"
                        Foreground="Gray"
                        Text="|" />

                    <TextBlock Grid.Column="2" Margin="10,0,0,0">
                        <Hyperlink
                            Command="{Binding OpenSupportCommand}"
                            Cursor="Hand"
                            Foreground="LightBlue">
                            Telegram
                        </Hyperlink>
                    </TextBlock>
                </Grid>

                <Button
                    Width="100"
                    Height="30"
                    HorizontalAlignment="Right"
                    Command="{Binding CloseWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="{x:Static properties:Resources.Close}"
                    Style="{StaticResource ButtonStyle}" />
            </StackPanel>

            <Button
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding CloseWindowCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Style="{StaticResource CloseButtonStyle}" />
        </Grid>
    </Border>
</Window>
